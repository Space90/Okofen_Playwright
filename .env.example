# ===============================
# EXEMPLE DE FICHIER .env
# NE PAS METTRE DE VRAIS SECRETS ICI
# ===============================

# Token pour l'auth Bearer (ex : chaîne aléatoire longue)
OKOFEN_TOKEN=CHANGE_ME_WITH_A_LONG_RANDOM_TOKEN

# URL locale de la chaudière (à adapter dans .env réel)
OKOFEN_URL=http://192.168.1.xx:8080

# Identifiants chaudière - EXEMPLES UNIQUEMENT
# Remplacer par les vraies valeurs uniquement dans le fichier .env local
OKOFEN_USER=YOUR_OKOFEN_USERNAME
OKOFEN_PASSWORD=YOUR_OKOFEN_PASSWORD

# Chemin du script à l'intérieur du conteneur
SCRIPT_PATH=/app/Okofen_Playwright.py

# Timeout pour le script Playwright
SCRIPT_TIMEOUT=25

# Journalisation dans le conteneur
LOG_PATH=/app/logs/okofen-web.log
LOG_LEVEL=INFO
